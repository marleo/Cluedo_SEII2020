        <activity android:name=".activities.ShowCards" />
        <activity android:name=".activities.playerGameInteraction.MakeSuspicion" />
        <activity
            android:name=".activities.SettingScreen"
            android:label="@string/app_name" />
        <activity
            android:name=".activities.GameboardScreen"
            android:label="Cluedo" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.NetworkActivities.NetworkScreen" />
        <activity
            android:name=".activities.NotepadScreen"
            android:label="Cluedo" />
