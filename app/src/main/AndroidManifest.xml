<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cluedo_seii">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".activities.ShowCards"></activity>

        <activity android:name=".activities.playerGameInteraction.MakeSuspicion"></activity>

        <activity
            android:name=".activities.SettingScreen"
            android:label="@string/app_name">
        </activity>

        <activity

            android:name=".activities.GameboardScreen"
            android:label="Cluedo">
        </activity>

        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.NetworkScreen" />

        <activity
            android:name=".activities.NotepadScreen"
            android:label="Cluedo">
        </activity>

        <activity
            android:name=".activities.playerGameInteraction.AccuseSomeone"
            android:label="Cluedo">
        </activity>


    </application>

</manifest>