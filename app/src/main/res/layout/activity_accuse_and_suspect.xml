<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/werWomitWo"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <Spinner
            android:id="@+id/suspectedCulprit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        >

        <Spinner

            android:id="@+id/suspectedWeapon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:animateLayoutChanges="false"
            android:animationCache="false"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown" />

    </LinearLayout>



    <Button
        android:id="@+id/makeSuspicionButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/custom_button_green"
        android:text="@string/verdaechtigenButton"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:translationY="450dp" />

    <Button
        android:id="@+id/makeAccusationButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/custom_button"
        android:text="@string/anklagenSpielendeButton"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:translationY="430dp" />

    <TextView
        android:id="@+id/currentRoomText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="You are in the "
        android:textAlignment="center"
        android:textSize="18sp" />

</LinearLayout>
